<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.springsthursday.tapxt.presenter.VerificationPresenter" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/verificationNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/loginLeftMargin"
                android:layout_marginEnd="@dimen/loginRightMargin"
                android:fontFamily="@font/nanumsquareregular"
                android:hint="@string/VerificationHint"
                android:inputType="number"
                android:text="@={viewModel.verificationNumber}"
                android:textColor="@color/defaultWhite"
                android:textColorHint="@color/defaultWhite" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/loginTopMargin"
                android:background="@drawable/loginbutton"
                android:layout_marginStart="@dimen/loginLeftMargin"
                android:layout_marginEnd="@dimen/loginRightMargin"
                android:onClick="@{viewModel :: ConfirmVerificationNumber}"
                android:text="@string/ConfirmVerification"
                android:textColor="@color/defaultWhite"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>