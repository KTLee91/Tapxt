<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialogbackground"

        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_marginLeft="@dimen/loginDialogLayoutLeftMargin"
            android:layout_marginBottom="@dimen/loginDialogLayoutBottomMargin"
            android:layout_marginTop="@dimen/loginDialogLayoutTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/loadingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/loginDialogLayoutRightMargin"
            android:layout_marginLeft="@dimen/loginDialogContentLeftMargin"
            android:textColor="@color/defaultWhite"
            android:fontFamily="@font/nanumsquareregular"
            android:textSize="@dimen/loadingMessageSize"
            android:text="hello" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>