<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.springsthursday.tapxt">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tapxt_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.springsthursday.tapxt.view.MainActivity">
        </activity>
        <activity android:name="com.springsthursday.tapxt.view.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.springsthursday.tapxt.view.LoginActivity">
        </activity>
        <activity
            android:name="com.springsthursday.tapxt.view.VerificationActivity">
        </activity>
        <activity
            android:name="com.springsthursday.tapxt.view.ContentActivity">
        </activity>
        <activity
            android:name="com.springsthursday.tapxt.view.ProfileUpdateActivity">
        </activity>
        <activity
            android:name="com.springsthursday.tapxt.view.ContentCoverActivity">
        </activity>
        <activity
            android:name="com.springsthursday.tapxt.view.CommentActivity">
        </activity>
        <activity
            android:name="com.springsthursday.tapxt.view.CommentUpdateActivity">
        </activity>
        <activity
            android:name="com.springsthursday.tapxt.view.SettingActivity">
        </activity>
    </application>

</manifest>